#!/usr/bin/env python3

import imp
import os
import os.path
import unittest

import setuptools


def test_suite():
    return unittest.TestLoader().discover("tests", pattern="test_*.py")


with open(os.path.join("@CMAKE_SOURCE_DIR@", "README.md"), "r") as f:
    long_description = f.read()

version = imp.load_source(
    "pkginfo.version", "mcasm/version.py"
).__version__

setuptools.setup(
    name="mcasm",
    author="GrammaTech, Inc.",
    author_email="gtirb@grammatech.com",
    version=version,
    description="Assemble code to bytes using LLVM's MC layer",
    classifiers=[
        "Intended Audience :: Developers",
        "Programming Language :: Python :: 3",
    ],
    packages=setuptools.find_packages(),
    python_requires='>=3.6',
    install_requires=[],
    dependency_links=[],
    test_suite="setup.test_suite",
    package_data={'mcasm': ['libmcasm.so', "py.typed"]},
    setup_requires=['wheel'],
    long_description=long_description,
    long_description_content_type="text/markdown",
    url="https://github.com/grammatech/mc-asm",
    license="MIT",
)
